# Конфигурация для docker-compose.yml

# Внешние зависимости (настраиваются через docker-compose)
RABBITMQ_USER=rmuser
RABBITMQ_PASS=rmpassword

DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=kaiten_test

# LLM конфигурация (обязательно заполнить)
EMBEDDING_HOST=https://api-copilot.x5.ru
EMBEDDING_API_KEY=your_embedding_api_key_here
EMBEDDING_PROVIDER=x5-embed
EMBEDDING_MODEL=x5-airun-multilingual-e5-large

LLM_HOST=https://api-copilot.x5.ru
LLM_API_KEY=your_llm_api_key_here
LLM_PROVIDER=x5
LLM_MODEL=x5-airun-large-prod
DIRECT_LLM=TRUE

# Kaiten конфигурация (для fetcher)
KAITEN_HOST=https://kaiten.io
KAITEN_API_KEY=your_kaiten_api_key_here
SPACE_ID=your_space_id_here
COLUMN_ID=your_column_id_here

# Опциональные настройки (имеют значения по умолчанию)
EMBEDDING_RATE_LIMIT=10
LLM_RATE_LIMIT=5
LLM_MAX_RETRIES=3
EMBEDDING_MAX_RETRIES=3
LLM_RETRY_DELAY=1.0
EMBEDDING_RETRY_DELAY=1.0
EMBEDDING_MAX_TEXT_LENGTH=1000
LLM_MAX_TOKENS=10000
LLM_JSON_PARSE_RETRIES=3
RABBITMQ_MAX_DELIVERY_RETRIES=5
LIMIT=100
EXCLUDED_COMMENT_AUTHORS=bot,automation
KAITEN_RATE_LIMIT_RPS=1.0
